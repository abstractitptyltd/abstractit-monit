check process <%= @real_process %> with pidfile <%= @real_pidfile %>
<%- if @groups -%>
  <%- @groups.each do |group| -%>
  group <%= group %>
  <%- end -%>
<%- end -%>
  start program = "<%= @real_start %>"
  stop  program = "<%= @real_stop %>"
<% if @host != '' -%>
  if failed host <%= @host %> port <%= @port %><% if @protocol != '' %> protocol <%= @protocol %> <% end %><% if @timeout != '' %> with timeout <%= @timeout %> <% end %><% if @type != '' %> type <%= @type %> <% end %> for <%= @host_tests %> times within <%= @host_cycles %> cycles then <%= @host_action %>
<% end -%>
<% if @socket != '' -%>
  if failed unixsocket <%= @socket %> <% if @protocol != '' %> protocol <%= @protocol %> <% end %><% if @socket_timeout != '' %> with timeout <%= @socket_timeout %> <% end %> <% if @socket_type != '' %> type <%= @socket_type %> <% end %> for <%= @host_tests %> times within <%= @host_cycles %> cycles then <%= @host_action %>
<% end -%>
  if <%= @restarts %> restarts within <%= @cycles %> cycles then <%= @restart_action %>
<%- if @depends -%>
  <%- depends.each do |depend| -%>
  depend <%= depend %>
  <%- end -%>
<%- end -%>
